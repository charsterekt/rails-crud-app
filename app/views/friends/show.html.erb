<div class="container-fluid bg-dark text-light p-5">
    <div class="container bg-dark p-5">
        <h1 class="display-4"><%= @friend.first_name %> <%= @friend.last_name %></h1>
        <hr>
        <p class="lead"><%= @friend.email %>  |  <%= @friend.phone %>  |  <%= @friend.instagram %></p>
        <br>
        <div class="container">
            <div class="row">
                <div class="col-2">
                    <%= link_to "Edit this friend", edit_friend_path(@friend), class:"btn btn-secondary" %>
                </div>
                <div class="col-2">
                    <%= button_to "Delete this friend", @friend, method: :delete, confirm: "Are you sure?", data: {"turbo-method": :delete, turbo_confirm: "Are you sure?"}, class:"btn btn-danger" %>
                </div>
                <div class="col-2">
                    <%= link_to "Back to friends", friends_path, class:"btn btn-dark" %>
                </div>
            </div>
        </div>
        <br><br>
    </div>
</div>
